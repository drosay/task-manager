{{> errors}}
<div class="col-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h4>Ingreso de usuario</h4>
        </div>
        <div class="card-body">
            <form action="/usuario/ingreso" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de usuario</label>
                    <input class="form-control" type="text" name="username" placeholder="username" id="username" required value="{{username}}" maxlength="12" minlength="3">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input class="form-control" type="password" name="password" placeholder="contraseña" id="password" required value="{{password}}" maxlength="30" minlength="3">
                </div>
                <div class="d-grid mt-2">
                    <button class="btn btn-success btn-block btn-sm" type="submit">Ingresar</button>
                </div>
            </form>
        </div>
    </div>
</div>